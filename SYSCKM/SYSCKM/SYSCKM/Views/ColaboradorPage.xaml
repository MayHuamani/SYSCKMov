<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SYSCKM.Views.ColaboradorPage">
    <StackLayout Margin="20">
        <Label Text="Cod. Empresa" />
        <Entry Text="{Binding Path=CodEmpresa}" 
               Placeholder="Código" />
        <Label Text="Cod. Funcionario" />
        <Entry Text="{Binding Path=Cod_Funcionario}"
               Placeholder="Código" />
        <Label Text="Nombre" />
        <Entry Text="{Binding Path=Nome}"
               Placeholder="Nombre" />
        <Button Text="Save" 
                Clicked="OnSaveButtonClicked" />
        <Button Text="Delete"
                Clicked="OnDeleteButtonClicked" />
        <Button Text="Cancel" 
                Clicked="OnCancelButtonClicked" />
    </StackLayout>
</ContentPage>